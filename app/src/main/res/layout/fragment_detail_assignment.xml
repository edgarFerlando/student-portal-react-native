<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.refactory.app.refactoryapps.fragments.DetailAssignmentFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status Assignments"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_id_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_status_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_link_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Link"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_descryption_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descryption"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_author_assignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Author"
                        android:textSize="12dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <ImageView
                android:id="@+id/img_status"
                android:layout_width="match_parent"
                android:scaleType = "centerCrop"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_photo_size_select_actual_black_24dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">


                <EditText
                    android:id="@+id/editText_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:singleLine="true"
                    android:hint="Value" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bt_update"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:padding="12dp"
                android:background="@color/btnUpdate"
                android:textColor="@color/textUpdate"
                android:text="Update" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
